<Window x:Class="CottonWPFSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CottonWPFSample"
        mc:Ignorable="d"
        Title="CottonWPF" Height="650" Width="800" Loaded="Window_Loaded">
    <Canvas>
        <Image Height="600" Width="800" Canvas.Top="0" Name="RenderTarget"></Image>
        <Button Name="RenderButton" Height="50" Canvas.Bottom="0" Width="800" Click="RenderButton_Click">Render</Button>
    </Canvas>
</Window>
